                    {
                        <p><strong>Specialty:</strong> @Model.Candidate.Specialty</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Candidate.Availibility))
                    {
                        <p><strong>Availability:</strong></p>
                    }

                    <hr />

